rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write to devlog only for authenticated users
    match /devlog/{document=**} {
      allow read, write: if request.auth != null;
    }
    // Allow read for meta (optional, for meta management)
    match /meta/{document=**} {
      allow read, write: if request.auth != null;
    }
    // Default: deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
